{
  "collectionName": "components_blocks_translation_blocks",
  "info": {
    "displayName": "Translation Block",
    "description": "Bloc comparant un texte source et sa traduction (source: EN/IT, traduction: FR)"
  },
  "options": {},
  "attributes": {
    "examples": {
      "type": "component",
      "repeatable": true,
      "component": "shared.translation-item"
    },
    "source": { "type": "blocks" },
    "translation": { "type": "blocks" },
    "sourceLanguage": {
      "type": "enumeration",
      "enum": ["en", "it"],
      "default": "en",
      "required": true
    },
    "translationLanguage": {
      "type": "enumeration",
      "enum": ["fr"],
      "default": "fr",
      "required": true
    },
    "showLanguageLabel": { "type": "boolean", "default": true },
    "author": { "type": "string" },
    "alignmentMapping": { "type": "json", "default": {} }
  },
  "config": {}
}

{
  "collectionName": "components_blocks_background_blocks",
  "info": {
    "displayName": "Background Block",
    "description": "Change le fond du site (couleur, image, gradient)"
  },
  "options": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "required": true,
      "default": "color",
      "enum": [
        "color",
        "image",
        "gradient"
      ]
    },
    "color": {
      "type": "string"
    },
    "gradient": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "videos",
        "audios",
        "files"
      ]
    },
    "imageDesktop": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "videos",
        "audios",
        "files"
      ]
    },
    "position": {
      "type": "enumeration",
      "default": "center center",
      "enum": [
        "center center",
        "top center",
        "bottom center",
        "left center",
        "right center"
      ]
    },
    "size": {
      "type": "enumeration",
      "default": "cover",
      "enum": [
        "cover",
        "contain",
        "auto"
      ]
    },
    "repeat": {
      "type": "enumeration",
      "default": "no-repeat",
      "enum": [
        "no-repeat",
        "repeat",
        "repeat-x",
        "repeat-y"
      ]
    },
    "fixed": {
      "type": "boolean",
      "default": false
    },
    "overlayColor": {
      "type": "string"
    },
    "overlayOpacity": {
      "type": "decimal",
      "default": 0
    },
    "scope": {
      "type": "enumeration",
      "default": "section",
      "enum": [
        "section",
        "global"
      ]
    }
  },
  "config": {}
}
